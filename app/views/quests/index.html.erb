<%= link_to "Add Quest", new_quest_path , :class=>"btn btn-primary" %>
<div class="box">
                <div class="box-header">
                  <h3 class="box-title">Data Table With Full Features</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                 
                  <div class="row">
                  <div class="col-sm-12"><table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                    <thead>
                      <tr role="row">
                      <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 280px;">Title
                      </th>
                      <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 310px;">Description
                      </th>
                      <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 276px;">Experience
                      </th>
                      <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 276px;">Actions
                      </th>
                      </tr>
                    </thead>
                    <tbody>
                      
                      <% @quests.each do |quest| %>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><%= quest.id %>. <%= quest.title %></td>
                        <td><%= truncate(quest.content, :length => 35 ) %></td>
                        <td><%= quest.exp %> exp</td>
                        <td><%= link_to "Read", quest %>
		<%= link_to "Edit", edit_quest_path(quest) %></td>
                    </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                      <tr><th rowspan="1" colspan="1">Title</th>
                      <th rowspan="1" colspan="1">Description</th>
                      <th rowspan="1" colspan="1">Experience</th>
                      <th rowspan="1" colspan="1">Actions</th>
                      </tr>
                    </tfoot>
                  </table></div></div>
                </div><!-- /.box-body -->
              </div>

              <script>
      $(function () {
        $("#example1").DataTable();
        
      });
    </script>